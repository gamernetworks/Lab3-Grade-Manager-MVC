@model AssignmentDetailsViewModel

@{
    ViewData["Title"] = "Create Assignment";
}

<h1>|| @Model.classroomName ||</h1>
<th />
<h2> Student Name: @Model.studentName </h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAssignment" asp-route-studentId="@Model.studentId" asp-route-classId="@Model.classroomId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="assignment.AssignmentId" />
            <div class="form-group">
                <label asp-for="assignment.AssignmentName" class="control-label"></label>
                <input asp-for="assignment.AssignmentName" class="form-control" />
                <span asp-validation-for="assignment.AssignmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="assignment.Grade" class="control-label"></label>
                <input asp-for="assignment.Grade" class="form-control" />
                <span asp-validation-for="assignment.Grade" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="assignment.StudentId" class="control-label"></label>
                <input asp-for="assignment.StudentId" class="form-control" value="@Model.studentId"/>
                <span asp-validation-for="assignment.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="javascript:history.back()" class="btn btn-danger">Cancel</a> 
            </div>
        </form>
    </div>
</div>

